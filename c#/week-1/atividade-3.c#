using System;

public class Atividade3
{
    public static void Main(string[] args)
    {
        double preco = 24.90;
        double kg;
        
        Console.WriteLine ("Restaurante Bem-Bao");
        Console.WriteLine("\t24 reais por quilo");
       
        Console.WriteLine("\nDigite a quantidade de quilos que tu pegou:");
        kg = Convert.ToDouble(Console.ReadLine());

        double total = preco * kg;
        
        Console.WriteLine($"\nO total que deve ser pago e de R${total}");
       
    }
}
