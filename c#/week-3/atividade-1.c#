using System;

public class Atividade1
{
    public static void Main(string[] args)
    {
        Console.WriteLine ("Digite um número para ");
        double num = double.Parse(Console.ReadLine());
        
        if (num % 2 == 0) {
            num = num + 5;
        } else {
            num = num + 8;
        }
        
        Console.WriteLine ($"{num} é o resultado final");
    }
}
